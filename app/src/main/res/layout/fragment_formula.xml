<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="16dp"
    tools:context=".FormulaFragment">

    <!-- LinearLayout serves as the container for all the content inside ScrollView -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Title for the Table -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Electricity Tariff Charges"
            android:textSize="18sp"
            android:textStyle="bold"
            android:gravity="center"
            android:paddingBottom="8dp" />

        <!-- TableLayout for the formula data -->
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="1"
            android:background="@color/lavender"
            android:padding="8dp">

            <!-- Table Header -->
            <TableRow>
                <TextView
                    android:text="Range (kWh)"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:padding="8dp" />

                <TextView
                    android:text="Charges (cent/kWh)"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:padding="8dp" />
            </TableRow>

            <!-- Row 1 -->
            <TableRow>
                <TextView
                    android:text="1-200"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="8dp" />

                <TextView
                    android:text="21.8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="8dp" />
            </TableRow>

            <!-- Row 2 -->
            <TableRow>
                <TextView
                    android:text="201-300"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="8dp" />

                <TextView
                    android:text="33.4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="8dp" />
            </TableRow>

            <!-- Row 3 -->
            <TableRow>
                <TextView
                    android:text="301-600"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="8dp" />

                <TextView
                    android:text="51.6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="8dp" />
            </TableRow>

            <!-- Row 4 -->
            <TableRow>
                <TextView
                    android:text="601+"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="8dp" />

                <TextView
                    android:text="54.6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="8dp" />
            </TableRow>

        </TableLayout>

        <!-- Rebate information -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Rebate: 5%"
            android:textSize="16sp"
            android:paddingTop="16dp" />

        <!-- Final cost explanation -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Final Cost = Total Charges - (Total Charges * 0.05)"
            android:textSize="16sp"
            android:paddingTop="8dp" />

    </LinearLayout>
</ScrollView>
